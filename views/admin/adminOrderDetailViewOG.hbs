            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Cancel confirmation</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to cancel the order?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <form action="/admin/cancel-by-admin" method="post">
                                <button type="submit" class="btn btn-danger" id="confirmCancelBtn" name="orderId"
                                    value="{{orderId}}">Yes, Cancel</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>



            <div class="modal fade" id="acceptCancel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Cancel confirmation</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to Accept the cancel order?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <form action="/admin/cancel-by-admin" method="post">
                                <button type="submit" class="btn btn-danger" id="confirmCancelBtn" name="orderId"
                                    value="{{orderId}}">Yes, Cancel</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>




            {{!-- rejecting cancel --}}
            <div class="modal fade" id="rejectCancel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Cancel confirmation</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to Reject the cancel order?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <form action="/admin/reject-by-admin" method="post">
                                <button type="submit" class="btn btn-danger" id="confirmCancelBtn" name="orderId"
                                    value="{{orderId}}">Yes</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>


            
            
            <div class="modal fade" id="markAsPreparing" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Prepare Product confirmation</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to confirm this order?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <form action="/admin/orderconfirmation" method="post">
                                <button type="submit" class="btn btn-danger" id="confirmCancelBtn" name="orderId"
                                    value="{{orderId}}">Yes</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            

            {{!-- mark ad deivered --}}
            
            <div class="modal fade" id="markAsDelivered" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Delivery confirmation</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to Deliver the order?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <form action="/admin/deliver-by-admin" method="post">
                                <button type="submit" class="btn btn-danger" id="confirmCancelBtn" name="orderId"
                                    value="{{orderId}}">Yes</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>





            <!-- Modal for "Return" -->
            <div class="modal fade" id="returnModal" tabindex="-1" role="dialog" aria-labelledby="returnModalTitle"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="returnModalTitle">Return confirmation</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to accept the return request?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <form action="/admin/accept-return" method="post">
                                <button type="submit" class="btn btn-primary" id="confirmReturnBtn" name="orderId"
                                    value="{{orderId}}">Yes, Return</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>




            <!-- Modal for "Reject Return" -->
            <div class="modal fade" id="rejectReturnModal" tabindex="-1" role="dialog" aria-labelledby="rejectReturnModalTitle"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="rejectReturnModalTitle">Reject Return confirmation</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to reject the return request?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <form action="/admin/reject-return" method="post">
                                <button type="submit" class="btn btn-danger" id="confirmRejectReturnBtn" name="orderId"
                                    value="{{orderId}}">Yes, Reject Return</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>







            <section class="h-100 gradient-custom">
                <div class="container py-5 h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-lg-10 col-xl-8">
                            <div class="card" style="border-radius: 10px;">
                                <div class="card-header px-4 py-5">
                                    <h5 class="text-muted mb-0">Order details of <span style="color: #535353;">{{deliveryAddress.name}}</span>.</h5>
                                </div>
                                <div class="card-body p-4">
                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                        <p class="lead fw-normal mb-0" style="color: #535353;">Receipt</p>
                                        <p class="small text-muted mb-0">Order Id : &nbsp;{{orderId}}</p>
                                    </div>
                                    <!-- Order details loop starts here -->
                                    {{#each orderDetails}}
                                    <div class="card shadow-0 border mb-4">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <img src="{{image.[0]}}" alt="ImageAlt" class="img-fluid" alt="Phone">
                                                </div>
                                                <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                    <p class="text-muted mb-0">{{this.name}}</p>
                                                </div>
                                                <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                    <p class="text-muted mb-0 small">{{this.quantity}}</p>
                                                </div>
                                                <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                    <p class="text-muted mb-0 small">Price: {{this.price}} </p>
                                                </div>
                                                <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                    <p style="margin-left: 170px" class="text-muted mb-0 small">
                                                        &#8377;{{this.total}}</p>
                                                </div>
                                            </div>
                                            <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                                            <div class="row d-flex align-items-center">
                                                <div class="col-md-2">
                                                    <p class="text-muted mb-0 small">Track Order<span><i class="ml-2 fa fa-refresh"
                                                                aria-hidden="true"></i></span></p>
                                                </div>
                                                <div class="col-md-2">
                                                    <span class="outline-box">{{status}}</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Order details loop ends here -->
                                    {{/each}}


                                <div class="row justify-content-end mt-3">
                                    <div class="col-auto">
                                        {{#if (eq cancellationStatus "Not requested")}}
                                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal"
                                            data-target="#exampleModalCenter">Cancel</button>
                                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#markAsPreparing">Confirm
                                            Order</button>
                                        {{else}}
                                        {{#if (eq cancellationStatus "cancellation requested")}}
                                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#acceptCancel">Accept
                                            Cancel</button>
                                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#rejectCancel">Reject
                                            Cancel</button>
                                        {{else}}
                                        {{#if (eq cancellationStatus "shipped")}}
                                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal"
                                            data-target="#exampleModalCenter">Cancel</button>
                                        <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#markAsDelivered">Mark as
                                            Delivered</button>
                                        {{else}}
                                        {{#if (eq cancellationStatus "Return requested")}}
                                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal"
                                            data-target="#returnModal">Return</button>
                                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#rejectReturnModal">Reject
                                            Return</button>
                                        {{!-- Default action if none of the conditions match --}}
                                        {{else}}
                                        {{#if (eq cancellationStatus "Order returned")}}
                                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="">Returned</button>

                                        {{else}}

                                        {{!-- Default action if none of the conditions match --}}
                                        

                                        {{/if}}
                                        {{/if}}
                                        {{/if}}
                                        {{/if}}
                                        {{/if}}
                                    </div>
                                </div>




                                </div>




                                    <div class="d-flex justify-content-between pt-2">
                                        <p class="fw-bold mb-0">Order Details</p>
                                        <p class="text-muted mb-0"><span class="fw-bold me-4">Total</span>&#8377;{{subtotal}}</p>
                                    </div>
            
                                    <div class="d-flex justify-content-between pt-2">
                                        <p class="text-muted mb-0">Order Id &nbsp;:&nbsp;{{orderId}} </p>
                                        {{!-- <p class="text-muted mb-0"><span class="fw-bold me-4">Discount</span> &#83770</p> --}}
                                    </div>
            
                                    <div class="d-flex justify-content-between">
                                        <p class="text-muted mb-0">Order Date &nbsp;:&nbsp;{{orderDate}}</p>
                                    </div>
            
                                    <!-- Add delivery address below -->
                                    <div class="delivery-address-card mt-4" style="margin-left: 10;">
                                        <h6 class="fw-bold mb-0">DELIVERY ADDRESS</h6>
                                        <div class="delivery-address-details" style="margin-left: 24px;margin-bottom: 15px;margin-top:12px">
                                            <p class="mb-0">{{deliveryAddress.name}}</p>
                                            <p class="mb-0">{{deliveryAddress.streetAddress}}</p>
                                            <p class="mb-0">{{deliveryAddress.pincode}}</p>
                                            <p class="mb-0">{{deliveryAddress.phone}}</p>
                                          
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer border-0 px-4 py-5"
                                    style="background-color: #535353; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                                    <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">
                                        Total paid: <span class="h2 mb-0 ms-2">&#8377;{{subtotal}}</span></h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

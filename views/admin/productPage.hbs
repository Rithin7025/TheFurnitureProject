        `}
          <button class="btn btn-sm btn-warning edit-button" onclick="editAction('/admin/editProduct/${val._id}')"
            style="margin-right: 5px;">Edit</button>
        
          </td>
        </tr>
      `
    }) 
    
  }catch(err){
    console.log(err)
  }
 }


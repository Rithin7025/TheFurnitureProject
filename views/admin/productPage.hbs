      });
 
 function hideUnhideAction(productId) {
  $.ajax({
    url: '/admin/hideUnhideProduct/' + productId,
    type: 'POST',
    success: function(response) {
      if (response.isVisible) {
        $('.hide-unhide-button')
          .removeClass('btn-danger')
          .addClass('btn-success')
          .text('Display');
      } else {
        $('.hide-unhide-button')
          .removeClass('btn-success')
          .addClass('btn-danger')
          .text('Hide');
      }
    },
    error: function(error) {
      console.log(error);
    }
  });
  run("/admin/productApi");
}


 

<script>

  
   $('.qty-btn-minus').on('click', function () {
    var input = $(this).siblings('.input-qty');
    var quantity = parseInt(input.val());

    if (!isNaN(quantity) && quantity > 1) {
      input.val(quantity - 1);
      updateQuantityDecrease(input);
    }
  });

  $('.qty-btn-plus').on('click', function () {
    var input = $(this).siblings('.input-qty');
    var quantity = parseInt(input.val());

    if (!isNaN(quantity) && quantity < 50) {
      input.val(quantity + 1);
      updateQuantityOnServer(input);
    }
  });

  $('.input-qty').on('input', function () {
    validateQuantity(this);
  });

  $('.input-qty').on('change', function () {
    updateQuantityOnServer($(this));
  }); 

  calculateSubtotal();


  function validateQuantity(input) {
    var quantity = parseInt($(input).val());

    if (isNaN(quantity) || quantity < 1) {
      $(input).val(1);
    } else if (quantity > 50) {
      $(input).val(50);
    }
  }

  function updateQuantityOnServer(input) {
    var productId = input.closest('tr').find('.total-col').data('productid'); // Corrected attribute name
    var quantity = input.val();

    var container = $(input).closest('.qty-container');
    var plusButton = container.find('.qty-btn-plus');
    var minusButton = container.find('.qty-btn-minus');

     

    // Send an AJAX request to update the quantity on the server
    $.ajax({
      url: '/update-quantity',
      method: 'POST',
      data: { productId: productId, quantity: quantity },
      success: function (response) {
        if(response.error){
          plusButton.prop('disabled', true);
        }else{


             plusButton.prop('disabled', false);
           // Update the total on the client-side based on the response
          var totalElement = input.closest('tr').find('.total-col');
          totalElement.text(response.cart.products.find(p => p.productId === productId).total);

          // Update the input value to reflect the updated quantity (optional)
          input.val(response.cart.products.find(p => p.productId === productId).quantity);
          calculateSubtotal();
        }
        }
      ,
      error: function (error) {
        // Handle the error response
        console.log(error);
      }
    });
  }


//decrement
  function updateQuantityDecrease(input) {
    var productId = input.closest('tr').find('.total-col').data('productid'); // Corrected attribute name
    var quantity = input.val();

      var container = $(input).closest('.qty-container');
    var plusButton = container.find('.qty-btn-plus');
    var minusButton = container.find('.qty-btn-minus');

    // Send an AJAX request to update the quantity on the server
    $.ajax({
      url: '/update-quantity-Decrease',
      method: 'POST',
      data: { productId: productId, quantity: quantity },
      success: function (response) {
        // Update the total on the client-side based on the response
       plusButton.prop('disabled', false);
             var totalElement = input.closest('tr').find('.total-col');
          totalElement.text(response.cart.products.find(p => p.productId === productId).total);

          // Update the input value to reflect the updated quantity (optional)
          input.val(response.cart.products.find(p => p.productId === productId).quantity);
          calculateSubtotal();
        
     
      },
      error: function (error) {
        // Handle the error response
        console.log(error);
      }
    });
  }




  function calculateSubtotal() {
    var subtotal = 0;

    $('.total-col').each(function () {
      var productTotal = parseFloat($(this).text());
      if (!isNaN(productTotal)) {
        subtotal += productTotal;
      }
    });

    $('#subtotal-amount-placeholder').text('₹' + subtotal.toFixed(2));
    $('#total-amount').text('₹' + subtotal.toFixed(2));

    // Redirect to the checkout page with the cart total
  }



</script>